# ===== AI API 설정 =====
# Gemini API 키 (메인 AI 서비스)
GEMINI_API_KEY=AIzaSyCR2iyn3uoeFhA8rl49pMdaxczSvwj-RFA

# OpenAI API 키 (레거시, 마이그레이션 후 제거 예정)
# OPENAI_API_KEY=your-openai-api-key-here

# ===== 데이터베이스 설정 =====
# MySQL 데이터베이스 연결 정보g
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=chatbot_user
MYSQL_PASSWORD=chatbot_password
MYSQL_DATABASE=chatbot_service

# ===== 벡터 데이터베이스 설정 =====
# Qdrant 벡터 데이터베이스 연결 정보
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ===== 애플리케이션 설정 =====
# 디버그 모드 (개발: true, 프로덕션: false)
DEBUG=true

# 환경 설정 (development, production, test)
ENVIRONMENT=development

# CORS 허용 오리진 (쉼표로 구분)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# 허용 호스트 (쉼표로 구분)
ALLOWED_HOSTS=*

# ===== 보안 설정 =====
# JWT 시크릿 키 (랜덤한 긴 문자열로 변경하세요)
SECRET_KEY=your-super-secret-key-change-this-in-production

# 액세스 토큰 만료 시간 (분)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== 서버 설정 =====
# 서버 호스트 및 포트
HOST=0.0.0.0
PORT=8000

# ===== 로깅 설정 =====
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===== 파일 업로드 설정 =====
# 업로드 디렉토리
UPLOAD_DIR=uploads

# 최대 파일 크기 (바이트, 기본 10MB)
MAX_FILE_SIZE=10485760

# ===========================================
# 사용법:
# 1. 이 파일을 .env로 복사: cp env.example .env
# 2. your-gemini-api-key-here를 실제 Gemini API 키로 변경
# 3. 기타 필요한 설정값들을 실제 환경에 맞게 수정
# ===========================================
